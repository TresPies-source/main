rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Rules for each collection
    match /tasks/{taskId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    match /wins/{winId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    match /focusSessions/{sessionId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    match /gratitude/{gratitudeId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    match /intentions/{intentionId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    match /affirmations/{affirmationId} {
      allow read, write: if isOwner(resource.data.userId);
    }

    // Rules for user mappings for Slack/Discord integrations
    match /userMappings/{mappingId} {
      // Allow creation by authenticated users for their own mapping
      allow create: if isOwner(request.resource.data.zenJarUserId);
      // Only allow reading/updating by the owner
      allow read, update: if isOwner(resource.data.zenJarUserId);
    }
  }
}