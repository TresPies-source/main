
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Rules for user-specific collections
    match /tasks/{documentId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /wins/{documentId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /focusSessions/{documentId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /gratitude/{documentId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /intentions/{documentId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    match /affirmations/{documentId} {
      allow read, write: if isOwner(resource.data.userId);
    }
    
    // This collection is for linking Slack/Discord IDs to ZenJar user IDs
    match /userMappings/{documentId} {
        allow read, write: if isOwner(resource.data.zenJarUserId);
    }
  }
}
