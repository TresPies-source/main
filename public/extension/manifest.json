
{
  "manifest_version": 3,
  "name": "ZenJar",
  "version": "1.0",
  "description": "A minimalist companion for focus, gratitude, and motivation.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "identity",
    "storage"
  ],
  "host_permissions": [
    "https://*.firebaseapp.com/*",
    "https://*.firebaseio.com/*",
    "https://*.firebasedatabase.app/*",
    "https://*.cloudfunctions.net/*",
    "https://*.googleapis.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; script-src-elem 'self' https://apis.google.com/ https://www.gstatic.com/ https://www.googleapis.com https://securetoken.googleapis.com; "
  },
  "oauth2": {
    "client_id": "634724124220-4k5j9f5vjqn2q1q3gq2qgq2qgq2qgq2q.apps.googleusercontent.com",
    "scopes": [
      "profile",
      "email"
    ]
  }
}
