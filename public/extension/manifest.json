
{
  "manifest_version": 3,
  "name": "ZenJar",
  "version": "1.0",
  "description": "A quick-access companion for your ZenJar.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icon16.png",
      "48": "/icon48.png",
      "128": "/icon128.png"
    }
  },
  "icons": {
    "16": "/icon16.png",
    "48": "/icon48.png",
    "128": "/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://www.gstatic.com/ https://apis.google.com/ https://www.googleapis.com; object-src 'self'"
  }
}
