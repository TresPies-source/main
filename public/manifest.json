
{
  "manifest_version": 3,
  "name": "ZenJar",
  "version": "1.0",
  "description": "A minimalist wellness and productivity tool to organize tasks, find motivation, and practice gratitude.",
  "permissions": [
    "storage",
    "identity"
  ],
  "action": {
    "default_popup": "extension/popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
