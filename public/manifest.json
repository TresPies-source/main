
{
  "manifest_version": 3,
  "name": "ZenJar",
  "version": "1.0",
  "description": "A minimalist wellness and productivity tool.",
  "permissions": [
    "storage",
    "identity"
  ],
  "action": {
    "default_popup": "extension/popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "extension/background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
